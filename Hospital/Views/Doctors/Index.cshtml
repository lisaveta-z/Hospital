@model IEnumerable<Hospital.Models.Doctor>

@{
    ViewBag.Title = "Список врачей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список врачей</h2>

<p>
    @Html.ActionLink("Добавить нового врача", "Create")
</p>
<table class="table">
    <tr>
        <th>Специальность</th>
        <th>Имя</th>
        <th>Фамилия</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Speciality.SpecialityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.DoctorId }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.DoctorId }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.DoctorId })
            </td>
        </tr>
    }

</table>
