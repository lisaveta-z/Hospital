@model IEnumerable<Hospital.Models.Patient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список пациентов</h2>

<p>
    @Html.ActionLink("Добавить нового пациента", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Имя
        </th>
        <th>
            Фамилия
        </th>
        <th>
            Год рождения
        </th>
        <th>
            Место жительства
        </th>
        <th>
            Номер медицинского полиса
        </th>
        <th>
            Номер паспорта
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PolicyNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Passport)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.PatientId }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.PatientId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.PatientId })
        </td>
    </tr>
}

</table>
